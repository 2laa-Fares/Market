<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment"
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SlidePageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/slideImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/farming"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/slide1_des"/>

        <TextView
            android:id="@+id/slideTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin64"
            android:layout_marginRight="@dimen/margin8"
            android:layout_marginLeft="@dimen/margin8"
            android:text="@string/slide1_title"
            android:gravity="center"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slideImage"
            android:contentDescription="@string/slide1_des"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin16"
            android:layout_marginBottom="@dimen/margin16"
            android:layout_marginRight="@dimen/margin8"
            android:layout_marginLeft="@dimen/margin8"
            android:text="@string/slide1_des"
            android:gravity="center"
            android:textColor="@color/colorPrimaryMed"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slideTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/slide1_des"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>