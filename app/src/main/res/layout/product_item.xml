<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/product_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/productImg1"
        android:layout_width="0dp"
        android:layout_height="@dimen/sub_image_height"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginBottom="@dimen/margin4"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/line1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/productTitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginLeft="@dimen/margin4"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/productImg1"
        app:layout_constraintRight_toRightOf="@id/productImg1"
        app:layout_constraintTop_toBottomOf="@+id/productImg1"
        android:gravity="left"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/productAmount1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginLeft="@dimen/margin4"
        app:layout_constraintLeft_toLeftOf="@id/productImg1"
        app:layout_constraintRight_toLeftOf="@+id/productButton1"
        app:layout_constraintTop_toBottomOf="@+id/productTitle1"
        android:gravity="left"
        android:textColor="@color/colorPrimaryMed"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/productPrice1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginBottom="@dimen/margin8"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginLeft="@dimen/margin4"
        app:layout_constraintLeft_toLeftOf="@id/productImg1"
        app:layout_constraintRight_toLeftOf="@+id/productButton1"
        app:layout_constraintTop_toBottomOf="@+id/productAmount1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="left"
        android:textColor="@color/colorPrimaryMed"
        tools:ignore="RtlHardcoded" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/productButton1"
        android:layout_width="@dimen/floating_button"
        android:layout_height="@dimen/floating_button"
        android:layout_marginBottom="@dimen/margin8"
        android:layout_marginRight="@dimen/margin8"
        android:layout_marginLeft="@dimen/margin8"
        app:layout_constraintRight_toLeftOf="@+id/line1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/productPrice1"
        app:backgroundTint="@color/colorGray"
        android:src="@mipmap/add"
        app:fabCustomSize="@dimen/floating_button"/>

    <TextView
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:background="@color/colorPrimaryMed"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/productImg2"
        android:layout_width="0dp"
        android:layout_height="@dimen/sub_image_height"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginBottom="@dimen/margin4"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/line1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/productTitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin8"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginLeft="@dimen/margin4"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/productImg2"
        app:layout_constraintRight_toRightOf="@id/productImg2"
        app:layout_constraintTop_toBottomOf="@+id/productImg2"
        android:gravity="left"
        android:textColor="@color/colorPrimaryDark"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/productAmount2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginLeft="@dimen/margin4"
        app:layout_constraintLeft_toLeftOf="@id/productImg2"
        app:layout_constraintRight_toLeftOf="@id/productButton2"
        app:layout_constraintTop_toBottomOf="@+id/productTitle2"
        android:gravity="left"
        android:textColor="@color/colorPrimaryMed"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/productPrice2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginBottom="@dimen/margin8"
        app:layout_constraintLeft_toLeftOf="@id/productImg2"
        app:layout_constraintRight_toLeftOf="@id/productButton2"
        app:layout_constraintTop_toBottomOf="@+id/productAmount2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="left"
        android:textColor="@color/colorPrimaryMed"
        tools:ignore="RtlHardcoded" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/productButton2"
        android:layout_width="@dimen/floating_button"
        android:layout_height="@dimen/floating_button"
        android:layout_marginBottom="@dimen/margin8"
        android:layout_marginRight="@dimen/margin8"
        android:layout_marginLeft="@dimen/margin8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/productPrice2"
        app:backgroundTint="@color/colorGray"
        android:src="@mipmap/add"
        app:fabCustomSize="@dimen/floating_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>